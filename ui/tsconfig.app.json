{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "../backend/types",
        "../backend/src/_utils"
    ],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "Node",
        "rootDir": "../",
        "types": ["vite-plugin-glsl/ext", "node"],
        "paths": {
            "@thebcms/selfhosted-backend/*": ["../backend/types/*"],
            "@thebcms/selfhosted-utils/*": ["../backend/src/_utils/*"],
            "@thebcms/selfhosted-sdk": ["./src/sdk"],
            "@thebcms/selfhosted-sdk/*": ["./src/sdk/*"],
            "@thebcms/selfhosted-ui/*": ["./src/*"]
        }
    }
}
