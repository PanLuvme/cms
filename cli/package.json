{
    "name": "@thebcms/selfhosted-cli",
    "version": "1.0.0",
    "description": "CLI tool for selfhosted BCMS.",
    "author": "BCMS",
    "license": "MIT",
    "main": "./index.mjs",
    "module": "./index.mjs",
    "types": "./index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "require": "./index.cjs",
            "import": "./index.mjs",
            "types": "./index.d.ts"
        }
    },
    "scripts": {
        "dev": "ts-node --project ./tsconfig.commonjs.json -r tsconfig-paths/register src/bin/main.ts",
        "build:ts:mjs": "tsc --project tsconfig.json",
        "build:ts:cjs": "tsc --project tsconfig.commonjs.json",
        "test": "jest",
        "build:noEmit": "tsc -p . --noEmit",
        "lint": "eslint . --ext .ts"
    },
    "dependencies": {
        "axios": "^1.6.8",
        "inquirer": "^11.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^22.5.5",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "eslint": "^8.56.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.3",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bcms/cms"
    },
    "bugs": {
        "url": "https://github.com/bcms/cms/issues"
    },
    "homepage": "https://github.com/bcms/cms#readme",
    "bin": {
        "bcms": "bin/main.mjs"
    }
}
