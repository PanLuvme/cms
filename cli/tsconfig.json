{
    "compilerOptions": {
        "module": "ES2020",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "outDir": "./dist/mjs",
        "baseUrl": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "Node",
        "paths": {
            "@bcms/selfhosted-cli": ["./src"],
            "@bcms/selfhosted-cli/*": ["./src/*"],
            "@bcms/selfhosted-backend": ["../backend/types"],
            "@bcms/selfhosted-backend/*": ["../backend/types/*"],
            "@bcms/selfhosted-utils/*": ["../backend/src/_utils/*"],
            "@bcms/selfhosted-sdk": ["../ui/src/sdk"],
            "@bcms/selfhosted-sdk/*": ["../ui/src/sdk/*"],
            "@bcms/selfhosted-client": ["../client/src"],
            "@bcms/selfhosted-client/*": ["../client/src/*"]
        }
    },
    "include": [
        "src",
        "../backend/src/_utils",
        "../client/src",
        "../ui/src/sdk"
    ]
}
