{
  "name": "@becomes/cms",
  "version": "1.0.54",
  "description": "Simple CMS for building APIs.",
  "author": "becomes.co",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main.js",
    "ts-build": "tsc -p .",
    "dev": "env-cmd nodemon src/server/main.ts",
    "build-svelte": "env-cmd node dist/build-svelte.js",
    "generate-doc": "typedoc --theme minimal server",
    "dev-front": "sapper dev --src src/frontend --routes src/frontend/routes --output src/frontend/node_modules/@sapper",
    "build-front": "sapper build --legacy --src src/frontend --routes src/frontend/routes --output src/frontend/node_modules/@sapper",
    "export-front": "sapper export --legacy --src src/frontend --routes src/frontend/routes --output src/frontend/node_modules/@sapper",
    "start-front": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test-front": "run-p --race dev cy:run",
    "test-bundle": "env-cmd node dist/bin/bcms.js"
  },
  "dependencies": {
    "arg": "^4.1.2",
    "axios": "^0.19.1",
    "bcrypt": "^3.0.7",
    "chokidar": "^3.3.1",
    "compression": "^1.7.1",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "mongoose": "^5.8.7",
    "multer": "^1.4.2",
    "polka": "next",
    "purple-cheetah": "^1.0.60",
    "quill": "^1.3.7",
    "sirv": "^0.4.0",
    "swagger-ui-express": "^4.1.2",
    "uuid": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@types/bcrypt": "^3.0.0",
    "@types/chokidar": "^2.1.3",
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^8.0.1",
    "@types/mongoose": "5.5.31",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.24",
    "@types/rollup": "^0.54.0",
    "@types/swagger-ui-express": "^4.1.1",
    "@types/uuid": "^3.4.6",
    "@types/yamljs": "^0.2.30",
    "autoprefixer": "^9.7.1",
    "carbon-components": "^10.9.2",
    "carbon-components-svelte": "^0.2.1",
    "crypto-js": "^3.1.9-1",
    "env-cmd": "^10.0.1",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.20.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-scss": "^2.1.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^5.2.0",
    "sapper": "^0.27.0",
    "sirv-cli": "^0.4.4",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^3.2.6",
    "svelte-routing": "^1.2.1",
    "ts-node": "^8.6.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.8",
    "typescript": "^3.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/becomesco/cms.git"
  },
  "bin": {
    "bcms": "bin/bcms.js"
  },
  "keywords": [
    "bcms"
  ],
  "bugs": {
    "url": "https://github.com/becomesco/cms/issues"
  },
  "homepage": "https://github.com/becomesco/cms#readme"
