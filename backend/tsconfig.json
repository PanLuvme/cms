{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": false,
        "strict": true,
        "target": "ES2022",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": false,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "paths": {
            "@thebcms/selfhosted-backend": ["./src"],
            "@thebcms/selfhosted-backend/*": ["./src/*"],
            "@thebcms/selfhosted-utils/*": ["./src/_utils/*"],
            "@thebcms/selfhosted-backend/server": ["./src/_server"],
            "@thebcms/selfhosted-backend/server/*": ["./src/_server/*"]
        }
    },
    "include": ["src", "functions", "events", "jobs", "plugins", "additional"]
}
