{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": false,
        "strict": true,
        "target": "ES2022",
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": false,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "paths": {
            "@bcms/selfhosted-backend": ["./src"],
            "@bcms/selfhosted-backend/*": ["./src/*"],
            "@bcms/selfhosted-utils/*": ["./src/_utils/*"]
        }
    },
    "include": ["src"]
}
